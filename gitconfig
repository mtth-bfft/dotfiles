[core]
    editor = vim

[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto

[alias]
    lg = log --oneline -n 20 --graph --decorate --abbrev-commit --branches --tags --remotes
    st = status --short

[push]
    # Only push the current branch to the remote, not all those
    # that have a name matching a distant one.
    default = simple

[status]
    relativePaths = false
